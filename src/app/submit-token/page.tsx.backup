'use client';

import { useState, useEffect } from 'react';
import { useSearchParams } from 'next/navigation';

/**
 * /submit-token - TOKEN SUBMISSION PAGE
 * 
 * PURPOSE: User returns from Work.ink with a token â†’ Submits it â†’ Gets key
 * 
 * SECURITY: All validation happens server-side
 * This is just UI - form handling only
 */

export default function SubmitTokenPage() {
  const searchParams = useSearchParams();
  const srParam = searchParams.get('sr'); // Work.ink passes session_id as ?sr=XXX
  
  const [sessionId, setSessionId] = useState<string>('');
  const [token, setToken] = useState<string>('');
  const [loading, setLoading] = useState(false);
  const [error, setError] = useState<string | null>(null);
  const [key, setKey] = useState<string | null>(null);

  useEffect(() => {
    // Try to get session_id from URL parameter (Work.ink redirect)
    // or from sessionStorage (if user clicked START on our site)
    const sid = srParam || sessionStorage.getItem('workink_session_id') || '';
    setSessionId(sid);

    if (!sid) {
      setError('No session found. Please start from the beginning.');
    }
  }, [srParam]);

  const handleSubmit = async (e: React.FormEvent) => {
    e.preventDefault();
    
    if (!sessionId) {
      setError('Session ID is missing');
      return;
    }

    if (!token || token.trim().length < 10) {
      setError('Please enter a valid token');
      return;
    }

    try {
      setLoading(true);
      setError(null);

      // SECURITY: Submit to server for verification
      // All token validation happens server-side
      const response = await fetch('/api/workink/submit-token', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          session_id: sessionId,
          token: token.trim()
        })
      });

      const data = await response.json();

      if (!data.success) {
        setError(data.error || 'Token verification failed');
        return;
      }

      // SUCCESS: Key received!
      setKey(data.key);
      
      // Clear sensitive data
      sessionStorage.removeItem('workink_session_id');

    } catch (err: any) {
      setError(err.message || 'Something went wrong');
    } finally {
      setLoading(false);
    }
  };

  // Success state - Key received
  if (key) {
    return (
      <div className="min-h-screen bg-black flex items-center justify-center p-4">
        <div className="max-w-md w-full">
          <div className="text-center mb-6">
            <div className="w-16 h-16 bg-green-500/20 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg className="w-8 h-8 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M5 13l4 4L19 7" />
              </svg>
            </div>
            <h1 className="text-3xl font-bold text-white mb-2">
              Success!
            </h1>
            <p className="text-gray-400">
              Your key has been generated
            </p>
          </div>

          <div className="bg-[#111] border border-[#222] rounded-lg p-6">
            <label className="text-sm text-gray-400 block mb-2">Your Key:</label>
            <div className="flex items-center gap-2">
              <input
                type="text"
                value={key}
                readOnly
                className="flex-1 px-4 py-3 bg-[#0a0a0a] border border-primary/50 rounded-lg text-primary font-mono text-lg focus:outline-none focus:border-primary"
              />
              <button
                onClick={() => {
                  navigator.clipboard.writeText(key);
                  alert('Key copied to clipboard!');
                }}
                className="px-4 py-3 bg-primary/20 hover:bg-primary/30 text-primary rounded-lg transition-colors"
                title="Copy key"
              >
                <svg className="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
                </svg>
              </button>
            </div>

            <div className="mt-6 p-4 bg-blue-500/10 border border-blue-500/20 rounded-lg">
              <p className="text-sm text-blue-300 mb-2">
                <strong>How to use your key:</strong>
              </p>
              <ol className="text-sm text-blue-200/80 space-y-1 list-decimal list-inside">
                <li>Open Roblox and join the game</li>
                <li>Execute the loader script</li>
                <li>Paste your key when prompted</li>
                <li>Enjoy the script!</li>
              </ol>
            </div>

            <p className="text-xs text-gray-500 text-center mt-4">
              Key expires in 24 hours
            </p>
          </div>
        </div>
      </div>
    );
  }

  // Main form - Token submission
  return (
    <div className="min-h-screen bg-black flex items-center justify-center p-4">
      <div className="max-w-md w-full">
        <div className="text-center mb-6">
          <h1 className="text-3xl font-bold text-white mb-2">
            Submit Your Token
          </h1>
          <p className="text-gray-400">
            Paste the token you received from Work.ink
          </p>
        </div>

        <div className="bg-[#111] border border-[#222] rounded-lg p-6">
          {/* Instructions */}
          <div className="mb-6 p-4 bg-primary/10 border border-primary/20 rounded-lg">
            <p className="text-sm text-primary mb-2">
              <strong>Where's my token?</strong>
            </p>
            <p className="text-sm text-primary/80">
              After completing the task on Work.ink, you should see a TOKEN displayed on the screen. 
              It usually looks like: <code className="bg-black/30 px-1 rounded">wink_abc123xyz</code>
            </p>
          </div>

          {/* Error Display */}
          {error && (
            <div className="mb-4 p-3 bg-red-500/10 border border-red-500/20 rounded-md">
              <p className="text-sm text-red-400">{error}</p>
            </div>
          )}

          {/* Form */}
          <form onSubmit={handleSubmit} className="space-y-4">
            {/* Session ID (read-only) */}
            <div>
              <label className="text-sm text-gray-400 block mb-2">
                Session ID:
              </label>
              <input
                type="text"
                value={sessionId}
                readOnly
                className="w-full px-4 py-2 bg-[#0a0a0a] border border-[#222] rounded-lg text-gray-500 text-sm font-mono focus:outline-none"
              />
            </div>

            {/* Token Input */}
            <div>
              <label className="text-sm text-gray-400 block mb-2">
                Work.ink Token: <span className="text-red-400">*</span>
              </label>
              <input
                type="text"
                value={token}
                onChange={(e) => setToken(e.target.value)}
                placeholder="Paste your token here..."
                disabled={loading}
                className="w-full px-4 py-3 bg-[#0a0a0a] border border-[#333] rounded-lg text-white focus:outline-none focus:border-primary transition-colors disabled:opacity-50"
                autoFocus
              />
              <p className="text-xs text-gray-600 mt-1">
                Example: wink_abc123xyz or similar format
              </p>
            </div>

            {/* Submit Button */}
            <button
              type="submit"
              disabled={loading || !sessionId || !token}
              className="w-full py-3 bg-primary hover:bg-primary/90 text-black font-bold rounded-lg transition-colors disabled:opacity-50 disabled:cursor-not-allowed"
            >
              {loading ? (
                <span className="flex items-center justify-center gap-2">
                  <div className="w-4 h-4 border-2 border-black border-t-transparent rounded-full animate-spin" />
                  Verifying token...
                </span>
              ) : (
                'Submit Token & Get Key'
              )}
            </button>
          </form>

          {/* Help */}
          <div className="mt-6 p-3 bg-yellow-500/10 border border-yellow-500/20 rounded-md">
            <p className="text-xs text-yellow-300">
              <strong>Didn't receive a token?</strong><br />
              Make sure you completed ALL steps of the offer on Work.ink. 
              If you closed the page, you may need to start over.
            </p>
          </div>
        </div>

        {/* Security Note */}
        <p className="text-center text-xs text-gray-600 mt-4">
          ðŸ”’ Your token is verified server-side for security.<br />
          Each token can only be used once.
        </p>
      </div>
    </div>
  );
}
